@{
    ViewData["Title"] = "Home Page";
}

<section class="content p-3">
    <div class="container-fluid">
        <!-- Stylish Welcome Heading -->
        <div class="text-center mb-4">
            <h1 class="text-dark font-weight-bold" style="font-size: 2.8rem; text-shadow: 1px 1px 2px rgba(0,0,0,0.3);">
                👋 Welcome To <span class="text-primary">Easy Stock Manager</span>
            </h1>
            <p class="text-muted" style="font-size: 1.1rem;">Manage your stock smartly with simplicity and speed.</p>
        </div>

        <!-- Full-width Welcome Image -->
        <div class="w-100 shadow rounded overflow-hidden" style="max-height: 80vh;">
            <img src="~/images/welcome.jpg"
                 alt="Welcome Image"
                 class="img-fluid w-100"
                 style="object-fit: cover; height: 100%;" />
        </div>
    </div>
</section>
