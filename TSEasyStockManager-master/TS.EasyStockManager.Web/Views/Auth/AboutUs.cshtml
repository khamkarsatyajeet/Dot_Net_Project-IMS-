@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>About Us | Easy Stock Manager</title>

    <!-- Styles -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700&display=swap" rel="stylesheet">
    <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/dist/css/adminlte.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Source Sans Pro', sans-serif;
            background-color: #FFFFFF;
            padding-top: 70px;
        }

        .info-section {
            max-width: 800px;
            margin: 0 auto 40px auto;
            text-align: center;
        }

            .info-section h2 {
                font-weight: 700;
                margin-bottom: 15px;
            }

            .info-section p {
                font-size: 1.1rem;
                color: #555;
            }

        .dev-team {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 30px;
            padding: 0 15px 40px 15px;
        }

        .dev-card {
            background: #e8f2f4;
            border-radius: 14px;
            box-shadow: 0 3px 12px rgba(0, 0, 0, 0.1);
            max-width: 340px;
            width: 100%;
            overflow: hidden;
            transition: transform 0.3s ease;
            padding: 25px 20px;
        }

            .dev-card:hover {
                transform: translateY(-6px);
            }

        .dev-photo {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 50%;
            margin: 10px auto 15px auto;
            display: block;
            border: 4px solid #007bff;
        }

        .dev-name {
            font-size: 1.25rem;
            font-weight: 600;
            text-align: center;
        }

        .dev-role {
            font-size: 1rem;
            color: #6c757d;
            text-align: center;
            margin-top: 4px;
        }

        .dev-contact {
            font-size: 0.95rem;
            text-align: center;
            color: #444;
            margin: 10px 0;
        }

            .dev-contact i {
                margin-right: 6px;
            }

        .icon-email {
            color: #007bff;
        }

        .icon-phone {
            color: #28a745;
        }

        .navbar-brand {
            font-weight: bold;
        }
    </style>
</head>
<body class="hold-transition">

    <!-- Navbar -->
    <nav class="navbar navbar-expand navbar-light bg-white border-bottom fixed-top shadow-sm">
        <a class="navbar-brand" href="/">Easy Stock Manager</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/Auth/Login">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Auth/ContactUs">Contact Us</a>
            </li>
        </ul>
    </nav>

    <!-- About Info -->
    <section class="info-section">
        <h2>About Us</h2>
        <p>
            Easy Stock Manager is an intuitive and powerful inventory management platform designed to streamline your stock control process. Our mission is to empower businesses of all sizes to manage their inventory with efficiency, accuracy, and ease.
        </p>
    </section>

