                <div class="dev-role">Full Stack Developer</div>
                <div class="dev-contact"><i class="fas fa-envelope icon-email"></i> khamkarsatyajeet190401@gmail.com</div>
                <div class="dev-contact"><i class="fas fa-phone icon-phone"></i> +91 98765 43210</div>
            </div>
        </div>

        <!-- Dev 2 -->
        <div class="dev-card">
            <img src="~/images/WhatsApp Image 2025-07-03 at 21.30.43_be448536.jpg" alt="Piyush Patil" class="dev-photo" />
            <div class="card-body text-center">
                <div class="dev-name">Piyush Patil</div>
                <div class="dev-role">Full Stack Developer</div>
                <div class="dev-contact"><i class="fas fa-envelope icon-email"></i> piyushpatil1698@gmail.com</div>
                <div class="dev-contact"><i class="fas fa-phone icon-phone"></i> +91 91234 56789</div>
            </div>
        </div>

        <!-- Dev 3 -->
        <div class="dev-card">
            <img src="~/images/Shriraj.jpg" alt="Shriraj Dhuri" class="dev-photo" />
