<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyStockManager.Web</title>

    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.css" />

    <!-- Toastr -->
    <link rel="stylesheet" href="~/plugins/toastr/toastr.min.css" />

    @RenderSection("style", false)

    <!-- AdminLTE -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css" />

    <style>
        .footer-dev-names {
            color: #154360;
            font-weight: 600;
        }

            .footer-dev-names span {
                margin: 0 5px;
                color: #7d3c98;
            }
    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed">
    <div class="wrapper">
        <!-- Navbar (Header) -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Sidebar toggle button (always visible) -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="fas fa-bars"></i> Menu
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/" class="brand-link">
                <img src="/dist/img/AdminLTELogo.png" alt="TS Stock" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">E S M</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <partial name="~/Views/Shared/_SidebarPartial.cshtml" />
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer text-center">
            <strong>
                &copy; 2025
                <span class="footer-dev-names">Satyajeet<span>,</span>Piyush<span>and</span>Shriraj</span>
            </strong> Easy Stock Manager.
        </footer>
    </div>

    <!-- REQUIRED SCRIPTS -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/dist/js/adminlte.min.js"></script>

    @RenderSection("script", required: false)
</body>
</html>
